doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/css/index.css")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title MSN
    style
      include css/users.css
    script
      include js/users.js
  body
    .container(style="position: relative;background: #F8F5F5;height:800px;")
      include include/header.pug
      .content(style="position: absolute; ;background: #C4C4C4;height: auto;min-height: 700px;z-index:1")
        div(style="text-align:center")
          h3 Users
            span#countusers (#{UsersExport.total})
          #users
            each user, index in UsersExport.users
              span(style="")
                a(href=`/user/${user.id}` style="")
                  if user.avatar
                    img(height="40px" width="40px" src=`https://cdnsocial.katelinlis.xyz/public/clients/${user.id}/100-${user.avatar}`)
                  else
                    img(height="40px" width="40px" src="https://cdnsocial.katelinlis.xyz/public/UserProfileImage.svg")
                  span #{user.username}



      include include/navs.pug
