extends layout.pug
block content
  .content(style="position: absolute; ;background: #C4C4C4;height:700px;z-index:1")
    div(style="text-align:center")
      label(for="InputUsername") Имя пользователя
      div
        input#InputUsername
      label(for="InputPassword") Пароль
      div
        input#InputPassword(type="password")
      div
        label(for="SavePassword") Сохранить пароль?
        input#SavePassword(type="checkbox")
      div#captcha(style="text-align: -webkit-center")
      div(style="margin-top: 15px;")
        input(type="button", onclick="register()" value="войти или создать аккаунт")
block scripts
  script(src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer)
  script
    include js/login.js
