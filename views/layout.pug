doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    link(rel="icon" href="/favicon.svg")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} Modern Social
    block scripts
    style
      include css/index.css
    script
      include js/index.js
  body
    .container(style="position: relative;background: #F8F5F5;height:800px;")
      include include/header.pug
      block content
      include include/navs.pug
    .footerMobile
      a(href="/")
        img(style="width:30px;" src="/img/footer/newspaper.svg")
      if auth.auth
        a(href=`/user/${auth.user.id}`)
          img(style="width:30px;margin-left:40px" src="/img/footer/user.svg")
      a(href=`/users`)
        img(style="width:38px;margin-left:40px" src="/img/footer/users.svg")
    script
      include js/yandex.js
    noscript
      div
        img(src="https://mc.yandex.ru/watch/84437218" style="position:absolute; left:-9999px;" alt="")
